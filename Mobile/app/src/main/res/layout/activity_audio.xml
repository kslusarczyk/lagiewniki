<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.agh.faustyna.mobile.Audio">

    <TextView
        android:id="@+id/title_audio_text_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>
    <LinearLayout
        android:id="@+id/player_container"
        android:background="@drawable/rounded_shape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/title_audio_text_view"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/down"
            android:background="@null"
            android:onClick="handlePlayButton"
            />

        <ProgressBar
            android:id="@+id/download_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </RelativeLayout>

        <ProgressBar
            android:id="@+id/player_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/player_state_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pobierzKoronke"
        android:layout_below="@id/player_container"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
