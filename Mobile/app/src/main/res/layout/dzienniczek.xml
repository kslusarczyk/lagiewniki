<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_margin">

    <TextView
        android:id="@+id/dzienniczek_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_dzienniczek"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="@dimen/kontakt_items_padding"
        android:textColor="@color/action_bar_color"/>

    <TextView
        android:id="@+id/dzienniczek_date"
        android:layout_below="@+id/dzienniczek_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="@dimen/item_size"
        android:paddingTop="@dimen/kontakt_items_padding"
        android:paddingBottom="@dimen/kontakt_items_padding"
        android:gravity="center"
        android:textColor="@color/action_bar_color"/>

    <WebView
        android:id="@+id/content_webview"
        android:layout_below="@+id/dzienniczek_date"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dzienniczek_info"
        android:id="@+id/dzienniczek_info"
        android:layout_alignParentBottom="true"
        android:textColor="@color/hyperlink"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>