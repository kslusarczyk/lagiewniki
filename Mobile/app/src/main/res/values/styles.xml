<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomAppCompatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
    </style>

    <style name="KontaktTitleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAppearance">@style/KontaktTitleAppearance</item>
        <item name="android:paddingBottom">@dimen/kontakt_items_padding</item>
        <item name="android:paddingTop">@dimen/kontakt_items_padding</item>
    </style>

    <style name="KontaktTitleAppearance" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/kontakt_header_size</item>
    </style>

    <style name="KontaktItemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">@dimen/kontakt_items_padding</item>
        <item name="android:paddingTop">@dimen/kontakt_items_padding</item>
        <item name="android:paddingLeft">@dimen/kontakt_items_padding</item>
    </style>

</resources>